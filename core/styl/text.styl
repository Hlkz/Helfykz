.cerclee
  width 144px
  height 144px
  padding-top 42px
  margin 0px auto 0px
  border 10px solid #ffe555
  border-radius 72px
  font-size 15px
  color #515d68
  font-weight 600
  text-align center
  text-transform uppercase
  line-height 25px
  border-color #008bcf
  strong
    font-size 25px
    display block

.cerclee-big
  position absolute
  background #fff
  width 200px
  height: 200px
  border-radius 100%
  margin-left -100px
  left 50%
  top 100px
  padding-top 70px
  font-size 22px
  strong
    margin-bottom 6px
    font-size 40px